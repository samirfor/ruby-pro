                    <%
                    require "dbi"
                    sql = "SELECT * FROM rs.historico ORDER BY id desc LIMIT 100 "
                    db = db_statement_execute(sql)
                    rst = db[0]
                    conn = db[1]
                    rst.fetch do |row|
                      print "<tr>\n<td>#{row["id"]}</td>\n";
                      print "<td>#{row["data"]}</td>\n"
                      print "<td>#{row["processo"]}</td>\n"
                      print "<td>#{row["mensagem"]}</td>\n</tr>\n"
                    end
                    rst.finish
                    db_disconnect(conn)
                  %>
